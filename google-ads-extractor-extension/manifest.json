{
    "manifest_version": 3,
    "name": "Google Ads Transparency Extractor Pro",
    "version": "1.0.0",
    "description": "Extract App Names, Store Links, and Video IDs from Google Ads Transparency Center with one click. Perfect for competitive analysis and ad research.",
    "author": "Your Name",
    "homepage_url": "https://yourwebsite.com",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://adstransparency.google.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Extract Ad Data"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://adstransparency.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "https://adstransparency.google.com/*"
            ]
        }
    ]
}